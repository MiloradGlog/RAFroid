<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="1.5dp"
        android:layout_marginEnd="1.5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".85"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:background="@drawable/customshapeleft">

            <TextView
                android:id="@+id/exam_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verovatnoca i statistika"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="17dp">

                <TextView
                    android:id="@+id/exam_classroom"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Ucionica 6"
                    android:textColor="@color/grey"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight=".50"
                    android:gravity="start"
                    android:layout_marginEnd="10dp">

                    <ImageView
                        android:id="@+id/exam_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_user" />

                    <TextView
                        android:id="@+id/exam_prof"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jelena Jovanovic"
                        android:textColor="@color/grey"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/customshapetopright">

            <TextView
                android:id="@+id/exam_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="18.02."/>

            <TextView
                android:id="@+id/exam_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="13:15h"
                android:textColor="@color/black"
                android:textSize="13sp" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>